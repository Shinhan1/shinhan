<script type="text/javascript">
	$(function(){
		$('textarea').keyup(function(){
			// 사용자가 입력한 글의 글자수 구하기
			var input = $(this).val().length;
			
			//console.log(input);
			
			//var cnt = 60 - input;
			
			//console.log(cnt);
			
			$('span').html(input);
			
			
			
		});
	});
</script>
